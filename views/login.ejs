    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <!-- bootstrap css -->
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <!-- main css
    <link rel="stylesheet" href="../css/style.css"> -->
    <link rel="stylesheet" href="../css/login_register.css">

</head>
<body>

<header>
    <nav class="navbar navbar-expand-lg px-4">
        <a class="navbar-brand" href="../../"><img src="../../img/logo.jpg" alt="DeliveRx Logo"></a>
    </nav>
</header>

<!-- login-box -->
<!---728x90
<div class="entry-box">-->
<div class="login-form">
    <div class="container-fluid">
        <div class="row max-height justify-content-center align-items-center">
            <div class="col-10 mx-auto banner text-center">
                <img src="../../img/avatar.jpg" alt="avatar" class="avatar">
                <h2 class="text-capitalize"><strong class="banner-title ">Login</strong></h2>
                <form action="/users/login" method="POST">
                    <div class="input-container">
                        <i class="fa fa-user icon"></i>
                        <input class="input-field clearable" type="email" id="email" name="email"
                               placeholder="Email Address" required=""/>
                    </div>


                    <div class="input-container">
                        <!--<i class="fas fa-key prefix" aria-hidden="true"></i>-->
                        <i class="fa fa-key icon"></i>
                        <input class="input-field" type="password" id="password" placeholder="Password" name="password"
                               required=""/>
                        <!--<span toggle="#password" class="fa fa-fw fa-eye field-icon toggle-password"></span>-->
                    </div>
                    <div><input type="checkbox" value="lsRememberMe" id="rememberMe">Remember Me <br></div>

                    <div class="button">
                        <div class="center">
                            <button tabindex="0" type="submit" id="submit" value="Login" onclick="lsRememberMe()"
                                    class="btn btn-outline-secondary btn-black  filter-btn m-2">SUBMIT
                            </button>
                        </div>
                    </div>
                    <br><br>
                    <div class="other_login_info">
                        <p tabindex="0">
                            <!--<a href="change_password.html">Change Password?</a><br>-->

                        <p><a href="./forget_password.html">Forgot Password?</a><br>
                            New User? <a href="./register">Sign Up!</a></p>

                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!---728x90--->
<!-- //login-box -->

<div>
    <ul>
        <% if (messages.success_msg) { %>
            <li><%= messages.success_msg %></li>
        <% } %>
    </ul>

    <ul>
        <% if (messages.error) { %>
            <li><%= messages.error %></li>
        <% } %>
    </ul>
</div>

</body>
</html>

